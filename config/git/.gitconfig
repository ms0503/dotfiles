[commit]
	gpgSign = true

[core]
	autocrlf = input

[delta]
	line-numbers = true
	minux-style = "syntax #340001"
	navigate = true
	plus-style = "syntax #012800"
	side-by-side = true
	syntax-theme = zenburn

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[merge]
	ff = only

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[pull]
	ff = only
	rebase = true

[push]
	gpgSign = if-asked

